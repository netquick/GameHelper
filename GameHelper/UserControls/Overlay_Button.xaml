<UserControl x:Class="GameHelper.UserControls.Overlay_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameHelper.UserControls"
             mc:Ignorable="d"
             Width="160" Height="59">
    <Border Background="{DynamicResource ThemeBackgroundBrush}" CornerRadius="10">
        <Grid>
            <Rectangle HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="20" />
            <Label Name="lblName" Content="{Binding Name}" HorizontalAlignment="Left" Height="27" Margin="35,10,0,0" VerticalAlignment="Top" Width="115" Foreground="{DynamicResource ThemeForegroundBrush}" />
            <Label Name="lblFunction" Content="{Binding Function}" HorizontalAlignment="Left" Margin="35,24,0,0" VerticalAlignment="Top" Foreground="{DynamicResource ThemeForegroundBrush}" Width="115"/>
        </Grid>
    </Border>
</UserControl>
