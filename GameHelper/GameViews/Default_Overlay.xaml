<Page x:Class="GameHelper.GameViews.Default_Overlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameHelper.GameViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Default_Overlay">
    <Border Background="{DynamicResource ThemeBackgroundBrush}">
        <Grid>
            <ComboBox HorizontalAlignment="Left" Margin="141,10,0,0" VerticalAlignment="Top" Width="183"/>
            <Label Content="Position" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="126" Foreground="{DynamicResource ThemeForegroundBrush}"/>
            <Label Content="Transparency" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="126" Foreground="{DynamicResource ThemeForegroundBrush}"/>
            <Slider HorizontalAlignment="Left" Margin="141,41,0,0" VerticalAlignment="Top" Width="183"/>
            <Label Content="Width" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="126" Foreground="{DynamicResource ThemeForegroundBrush}"/>
            <Slider HorizontalAlignment="Left" Margin="141,72,0,0" VerticalAlignment="Top" Width="183"/>

        </Grid>
    </Border>
</Page>
