      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameHelper.GameViews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Default_Gamesettings">
    <Border Background="{DynamicResource ThemeBackgroundBrush}">

        <Grid>
            <TextBox HorizontalAlignment="Left" Margin="142,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" Height="26"/>
            <Label Content="Game window" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127" Foreground="{DynamicResource ThemeForegroundBrush}"/>

        </Grid>
    </Border>
</Page>
